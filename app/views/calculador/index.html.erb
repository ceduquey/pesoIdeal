<%= form_tag("/resultado", :method => "get") do%>
<hr>
<p>Entra tu sexo</p>
<%= radio_button_tag(:sexo,"0")%>
<%= label_tag(:sexo_m,"Masculino")%>
<%= radio_button_tag(:sexo,"1")%>
